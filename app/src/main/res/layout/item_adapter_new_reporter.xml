<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"

>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="@dimen/dime16dp"
        android:layout_marginRight="@dimen/dime16dp"
        android:layout_marginTop="@dimen/dime8dp"

        app:cardCornerRadius="@dimen/dime16dp"
        app:cardBackgroundColor="@android:color/holo_orange_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/title_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dime16dp"
            android:textColor="@android:color/white"
            android:textSize="@dimen/dime24sp"
            android:textStyle="bold"
            tools:text="Title" />

        <TextView
            android:id="@+id/history_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_marginTop="@dimen/dime50dp"
            android:layout_marginLeft="@dimen/dime16dp"
            tools:text="Hello this is my history" />

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
